{
    "manifest_version": 2,
    "name": "Moti n'Deti",
    "description": "Me kete extension ju mund te shikoni motin per te gjitha bregdetet shqipetare",
    "version": "1.1",
    "icons": {
        "128": "weather_icon.png"
    },
    "browser_action":
            {
                "default_icon": "weather_icon.png",
                "default_popup": "index.html"
            },
    "background":
            {
                "scripts": ["jquery-1.11.1.min.js","simpleWeather.js","background.js"]
            },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["jquery-1.11.1.min.js","simpleWeather.js","myscript.js"],
            "run_at": "document_end"
        }
       
    ],
    "permissions": [
          "tabs"
        ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://query.yahooapis.com;  object-src 'self'"
    

}
